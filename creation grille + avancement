type Grid = number[][];
const ROWS = 6;
const COLS = 7;


function createGrid(): Grid {
  const g: Grid = [];
  for (let r = 0; r < ROWS; r++) {
    const row: number[] = [];
    for (let c = 0; c < COLS; c++) row.push(0);
    g.push(row);
  }
  return g;
}


function cloneGrid(g: Grid): Grid {
  const c: Grid = [];
  for (let r = 0; r < ROWS; r++) c.push([...g[r]]);
  return c;
}
